<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<html>
<head>
    <title>Title</title>
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/blog.css">
</head>
<body>
    <h1 id="title">${blog.title}</h1>
    <a href="/blogs" style="text-decoration: none">
        <button type="button">Back to home</button>
    </a>
    <div id="blog-container">
        <div id="blog-article">
            <div id="blog-author">
                <div id="avatar-author" class="avatar">
                    <img id="img-avatar" src="data:image/png;base64," alt="">
                    <p>${blog.author}</p>
                </div>
            </div>
            <div id="blog-content">
                <p id="date-post">${blog.createAt}</p>
                <p>${blog.content}</p>
                <a href="/blogs?action=detail&id=${blog.id}&account_comment_id=${account.id}">Reply</a>
            </div>

        </div>

        <c:forEach var="comments" items="${comments}">
        <div id="comment-article">
            <div id="comment-author">
                <div id="avatar-comment" class="avatar">
                    <img class="img-comment" src="data:image/png;base64," alt="">
                    <p>${comments.account.fullName}</p>
                </div>
            </div>
            <div class="comment-content" id="comment-${comments.id}" />
                <p id="date-comment">${comments.createAT}</p>
                <p id="comment-content-message">${comments.content}</p>
                <a class="option-comment" href="/blogs?action=detail&id=${blog.id}&account_comment_id=${comments.account.id}">Reply</a>
                <c:if test = "${comments.account.id == 1}">
                    <button class="option-comment" onclick="openEditComment(${comments.id});">Edit</button>
                    <a class="option-comment" href="/comment?action=delete&id=${blog.id}&account_comment_id=${account.id}&comment_id=${comments.id}">Delete</a>
                </c:if>
            </div>

            <div class="message-content-edit" style="display: none" id="edit-${comments.id}"/>
                <form action="/comment?action=edit&id=${blog.id}&account_comment_id=${account.id}&comment_id=${comments.id}" method="post">
                    <textarea name="message" id="message-edit" cols="47" rows="4">
                            ${comments.content}
                    </textarea>
                    <input id="submit-edit" type="submit" value="Post reply">
                </form>
                <button type="button" onclick="closeEditComment(${comments.id})">Cancel</button>
            </div>
        </div>
        </c:forEach>

        <div id="message-block">
            <div id="message-author">
                <div class="avatar">
                    <img class="img-comment" src="data:image/png;base64," alt="">
                </div>
            </div>
            <div id="message-content">
                <form action="/comment?action=create&id=${blog.id}&account_comment_id=${account.id}" method="post">
                    <textarea name="message" id="message" cols="47" rows="4">
                            @${account.fullName}
                    </textarea>
                    <input id="submit-reply" type="submit" value="Post reply">
                </form>
            </div>
        </div>
    </div>
    <script>
        function openEditComment(id){
            document.getElementById("comment-"+id).style.display = "none";
            document.getElementById("edit-"+id).style.display = "block";
        }

        function closeEditComment(id){
            document.getElementById("comment-"+id).style.display = "block";
            document.getElementById("edit-"+id).style.display = "none";
        }
    </script>
</body>

</html>
